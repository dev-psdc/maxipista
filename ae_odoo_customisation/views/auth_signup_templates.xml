<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="fields" inherit_id="auth_signup.fields" name="Information fields">
        <xpath expr="//div[hasclass('field-name')]" position="after">
            <div class="form-group field-ruc">
                <label for="name">RUC</label>
                <input type="text" name="ruc" t-att-value="ruc" id="ruc" class="form-control form-control-sm" placeholder="RUC"
                    required="required" />
            </div>
            <div class="form-group field-sex">
                <label for="sex">Sex</label>
                <br/>
                <input type="radio" name="sex" value="Masculino" id="male" checked="checked"/>  Masculino
                <span style="margin-left:10px"/><input type="radio" name="sex" value="Femenino" id="female"/>  Femenino
            </div>
            <div class="form-group field-birth_date">
                <label for="birth_date">Birth Date</label>
                <input type="date" name="birth_date" t-att-value="birth_date" id="birth_date" class="form-control form-control-sm"/>
               
            </div>            
        </xpath>
    </template>
</odoo>
